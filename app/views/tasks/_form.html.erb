<%= form_with(model: @task, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control", placeholder: "Enter task title" %>
  </div>

  <div class="form-group">
    <%= form.label :details %>
    <%= form.text_area :details, class: "form-control", rows: 3, placeholder: "Enter task details" %>
  </div>

  <div class="form-check mb-3 m-2">
    <%= form.check_box :completed, class: "form-check-input" %>
    <%= form.label :completed, class: "form-check-label", style: "margin-left: 3px;" do %>
    Completed
    <% end %>
  </div>

  <%= form.submit ( @task.new_record? ? 'Create Task' : 'Update Task'), class: 'btn btn-primary mt-2' %>
<% end %>
