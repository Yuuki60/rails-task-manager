<div class="task-details">
  <div class="d-flex justify-content-between align-items-center">
    <h1 class="mb-3"><%= @task.title %></h1>
    <%= link_to "Edit this task", edit_task_path(@task), class: 'btn btn-secondary' %>
  </div>
  <hr class="my-4">

  <blockquote class="p-4 border my-4 blockquote bg-custom">
  <%= @task.details %>
  </blockquote>

  <div class="form-check">
    <input type="checkbox" class="form-check-input" <%= @task.completed ? 'checked' : '' %> />
    <label class="form-check-label" for="completed">
    <%= @task.completed ? 'This task is completed' : 'This task is not completed yet' %>
    </label>
  </div>
</div>

<hr class="my-4">

<%= link_to(tasks_path, class: 'btn btn-secondary back-link') do %>
  <i class="fas fa-arrow-left"></i> Back to List
<% end %>
